<PropertyList>

 <!-- Overlay this to set the pressure source. -->
 <params>
  <pressure-psi>engines/engine[0]/oil-pressure-psi</pressure-psi>
  <serviceable>instrumentation/oil-pressure-gauge[0]/serviceable</serviceable>
 </params>

 <path>oil_pressure.ac</path>

 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m> 0.000 </x-m>
  <y-m> 0.000 </y-m>
  <z-m> 0.000 </z-m>
 </offsets>

 <animation> 
  <type>rotate</type>
  <object-name>Needle</object-name>
  <property alias="../../params/pressure-psi"/>
  <interpolation> 
   <entry><ind>0</ind><dep>150</dep></entry>
   <entry><ind>100</ind><dep>-150</dep></entry>
  </interpolation>
  <condition>
   <property alias="../../../params/serviceable"/>
  </condition>
  <center>
   <x-m> 0.000 </x-m>
   <y-m> 0.000 </y-m>
   <z-m> 0.000 </z-m>
  </center>
  <axis> 
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <!-- animation> 
  <type>material</type>
  <emission> 
   <factor-prop>controls/lighting/panel-norm</factor-prop>
   <red>0.75</red>
   <green>0.25</green>
   <blue>0.25</blue>
  </emission>
 </animation -->

 <animation>
  <type>noshadow</type>
 </animation>

</PropertyList>
