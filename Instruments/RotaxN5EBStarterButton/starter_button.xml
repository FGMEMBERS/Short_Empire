<PropertyList>

 <!-- Overlay these to set the controlling properties. -->
 <params>
  <button-pressed-norm         type="string"/>
  <pick-action-script    n="0" type="string"/>
  <release-action-script n="0" type="string"/>
  <pick-action-script    n="1" type="string"/>
  <release-action-script n="1" type="string"/>
  <pick-action-script    n="2" type="string"/>
  <release-action-script n="2" type="string"/>
 </params>

 <path>starter_button.ac</path>

 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m> 0.000 </x-m>
  <y-m> 0.000 </y-m>
  <z-m> 0.000 </z-m>
 </offsets>

 <!-- Move the button -->
 <animation>
  <type>translate</type>
  <object-name>button</object-name>
  <property alias="../../params/button-pressed-norm"/>
  <axis>
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
  <interpolation>
   <entry>
    <ind>0.0</ind>
    <dep>0.000</dep>
   </entry>
   <entry>
    <ind>1.0</ind>
    <dep>-0.004</dep>
   </entry>
  </interpolation>
 </animation>
 <animation>
  <type>pick</type>
  <object-name>button</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
    <script alias="../../../../params/pick-action-script[0]"/>
   </binding>
   <mod-up>
    <binding>
     <command>nasal</command>
     <script alias="../../../../../params/release-action-script[0]"/>
    </binding>     
   </mod-up>
  </action>
  <action>
   <button>1</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
    <script alias="../../../../params/pick-action-script[1]"/>
   </binding>
   <mod-up>
    <binding>
     <command>nasal</command>
     <script alias="../../../../../params/release-action-script[1]"/>
    </binding>     
   </mod-up>
  </action>
  <action>
   <button>2</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
    <script alias="../../../../params/pick-action-script[2]"/>
   </binding>
   <mod-up>
    <binding>
     <command>nasal</command>
     <script alias="../../../../../params/release-action-script[2]"/>
    </binding>     
   </mod-up>
  </action>
 </animation>

 <animation> 
  <type>material</type>
  <object-name>button</object-name>
  <emission> 
   <factor-prop>controls/lighting/panel-norm</factor-prop>
   <red>0.75</red>
   <green>0.25</green>
   <blue>0.25</blue>
  </emission>
 </animation>

 <animation>
  <type>noshadow</type>
 </animation>

</PropertyList>
