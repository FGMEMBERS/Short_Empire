<PropertyList>

 <parameters>
  <position-norm type="string"/>
 </parameters>

 <texture-path>Aircraft/Short_Empire/Models/Interior</texture-path>

 <path>cowling_gills.ac</path>
 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m> 0.00 </x-m>
  <y-m> 0.00 </y-m>
  <z-m> 0.00 </z-m>
 </offsets>

 <animation>
  <type>select</type>
  <object-name>cowling_gills_0</object-name>
  <condition>
   <less-than>
    <property alias="../../../../parameters/position-norm"/>
    <value>0.083</value>
   </less-than>
  </condition>
 </animation>
 <animation>
  <type>select</type>
  <object-name>cowling_gills_5</object-name>
  <condition>
   <and>
    <greater-than-equals>
     <property alias="../../../../../parameters/position-norm"/>
     <value>0.083</value>
    </greater-than-equals>
    <less-than>
     <property alias="../../../../../parameters/position-norm"/>
     <value>0.25</value>
    </less-than>
   </and>
  </condition>
 </animation>
