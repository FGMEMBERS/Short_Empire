<PropertyList>

 <!-- Overlay these to set the controlling properties. -->
 <params>
  <pos-norm type="string">/controls/fuel/center-test-cock</pos-norm>
  <inc-action-script type="string">
    setprop("/controls/fuel/center-test-cock",
            math.min(getprop("/controls/fuel/center-test-cock") + 0.1, 1.0));
  </inc-action-script>
  <dec-action-script type="string">
    setprop("/controls/fuel/center-test-cock",
            math.max(getprop("/controls/fuel/center-test-cock") - 0.1, 0.0));
  </dec-action-script>
 </params>

 <path>fuel_pump_test_cock.ac</path>
 <offsets>
  <!-- x/y/z == forward/left/up (looking at the instrument) -->
  <x-m> 0.0 </x-m>
  <y-m> 0.0 </y-m>
  <z-m> 0.0 </z-m>
 </offsets>

 <animation>
  <type>pick</type>
  <object-name>handle</object-name>
  <object-name>axis</object-name>
  <action>
   <button>0</button>
   <repeatable>true</repeatable>
   <interval-sec>0.2</interval-sec>
   <binding>
    <command>nasal</command>
    <script alias="../../../../params/inc-action-script"/>
   </binding>
  </action>
  <action>
   <button>1</button>
   <repeatable>true</repeatable>
   <interval-sec>0.2</interval-sec>
   <binding>
    <command>nasal</command>
    <script alias="../../../../params/dec-action-script"/>
   </binding>
  </action>
  <action>
   <button>3</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
    <script alias="../../../../params/inc-action-script"/>
   </binding>
  </action>
  <action>
   <button>4</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
    <script alias="../../../../params/dec-action-script"/>
   </binding>
  </action>
 </animation>

 <animation>
  <type>rotate</type>
  <object-name>handle</object-name>
  <object-name>axis</object-name>
  <property alias="../../params/pos-norm"/>
  <factor>120.0</factor>
  <offset-deg>-30.0</offset-deg>
  <center>
   <x-m>  0.00 </x-m>
   <y-m>  0.00 </y-m>
   <z-m>  0.00 </z-m>
  </center>
  <axis>
   <x> 1.0 </x>
   <y> 0.0 </y>
   <z> 0.0 </z>
  </axis>
 </animation>

 <animation> 
  <type>material</type>
  <object-name>back_plate2</object-name>
  <emission> 
   <factor-prop>controls/lighting/panel-norm</factor-prop>
   <red>0.75</red>
   <green>0.25</green>
   <blue>0.25</blue>
  </emission>
 </animation>

</PropertyList>
