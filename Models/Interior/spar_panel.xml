<PropertyList>

 <!-- No main model. -->
 <!-- The origin is at floor level in the middle of spar bulkhead. -->
 <path>../../../../Models/Geometry/null.ac</path>
 <offsets>
  <!-- x/y/z == forward/left/up (backward/right/up when facing the panel) -->
  <x-m> 0.0 </x-m>
  <y-m> 0.0 </y-m>
  <z-m> 0.0 </z-m>
 </offsets>

 <model>
  <name>Left tank gauge</name>
  <path>Aircraft/Short_Empire/Instruments/TelevelFuelGauge/televel_fuel_gauge.xml</path>
  <offsets>
   <x-m> 0.100</x-m>
   <y-m>-0.260</y-m>
   <z-m> 1.650</z-m>
  </offsets>
  <overlay>
   <params>
    <tank-content-lbs>consumables/fuel/tank[0]/level-lbs</tank-content-lbs>
    <indicated-content-lbs>instrumentation/fuel-gauge[0]/indicated-content-lbs</indicated-content-lbs>
    <serviceable>instrumentation/fuel-gauge[0]/serviceable</serviceable>
   </params>
  </overlay>
 </model>
 <model>
  <name>Right tank gauge</name>
  <path>Aircraft/Short_Empire/Instruments/TelevelFuelGauge/televel_fuel_gauge.xml</path>
  <offsets>
   <x-m> 0.100</x-m>
   <y-m>-0.460</y-m>
   <z-m> 1.650</z-m>
  </offsets>
  <overlay>
   <params>
    <tank-content-lbs>consumables/fuel/tank[1]/level-lbs</tank-content-lbs>
    <indicated-content-lbs>instrumentation/fuel-gauge[1]/indicated-content-lbs</indicated-content-lbs>
    <serviceable>instrumentation/fuel-gauge[1]/serviceable</serviceable>
   </params>
  </overlay>
 </model>

 <animation> 
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10</max-m>
 </animation>

</PropertyList>
