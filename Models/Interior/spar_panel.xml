<PropertyList>

 <!-- No main model. -->
 <!-- The origin is at floor level in the middle of spar bulkhead. -->
 <!-- x/y/z == forward/left/up (backward/right/up when facing the panel) -->

 <!-- Centre wing tank gauges. Available for Mark I, II and III. -->
 <model>
  <name>Left centre wing tank gauge</name>
  <path>Aircraft/Short_Empire/Instruments/TelevelFuelGauge/televel_fuel_gauge.xml</path>
  <offsets>
   <x-m> 0.100</x-m>
   <y-m>-0.260</y-m>
   <z-m> 1.650</z-m>
  </offsets>
  <overlay>
   <params>
    <tank-content-lbs>consumables/fuel/tank[0]/level-lbs</tank-content-lbs>
    <indicated-content-lbs>instrumentation/fuel-gauge[0]/indicated-content-lbs</indicated-content-lbs>
    <serviceable>instrumentation/fuel-gauge[0]/serviceable</serviceable>
   </params>
  </overlay>
 </model>
 <model>
  <name>Right centre wing tank gauge</name>
  <path>Aircraft/Short_Empire/Instruments/TelevelFuelGauge/televel_fuel_gauge.xml</path>
