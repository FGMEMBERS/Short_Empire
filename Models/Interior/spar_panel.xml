 <animation>
  <type>select</type>
  <object-name>Left outboard wing tank gauge</object-name>
  <object-name>Right outboard wing tank gauge</object-name>
  <condition>
   <greater-than>
    <property>sim/model/mark</property>
    <value type="int">1</value>
   </greater-than>     
  </condition>
 </animation>

 <animation>
  <type>translate</type>
  <object-name>Left outboard wing tank gauge</object-name>
  <object-name>Left centre wing tank gauge</object-name>
  <property>sim/model/mark</property>
  <interpolation>
   <entry>
    <ind>1</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>2</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>3</ind>
    <dep>0.195</dep>
   </entry>
  </interpolation>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>
 <animation>
  <type>translate</type>
  <object-name>Right outboard wing tank gauge</object-name>
  <object-name>Right centre wing tank gauge</object-name>
  <property>sim/model/mark</property>
  <interpolation>
   <entry>
    <ind>1</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>2</ind>
    <dep>0.0</dep>
   </entry>
   <entry>
    <ind>3</ind>
    <dep>-0.195</dep>
   </entry>
  </interpolation>
  <axis>
   <x>0.0</x>
   <y>1.0</y>
   <z>0.0</z>
  </axis>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Left inboard wing tank gauge</object-name>
  <object-name>Right inboard wing tank gauge</object-name>
  <object-name>Left fuselage tank gauge</object-name>
  <object-name>Right fuselage tank gauge</object-name>
  <condition>
   <greater-than>
    <property>sim/model/mark</property>
    <value type="int">2</value>
   </greater-than>     
  </condition>
 </animation>

 <animation> 
  <type>range</type>
  <min-m>0</min-m>
  <max-m>10</max-m>
 </animation>

</PropertyList>
