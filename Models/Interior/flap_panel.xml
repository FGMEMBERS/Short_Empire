<PropertyList>

 <!-- Overlay these to set the sources. -->
 <params>
  <operating-switch-cmd>controls/flight/flap-motor</operating-switch-cmd>
  <flap-position-norm>surface-positions/flap-pos-norm</flap-position-norm>
  <serviceable>instrumentation/flap-position-indicator[0]/serviceable</serviceable>
  <lighting-norm>controls/lighting/dome-norm</lighting-norm>
 </params>

 <path>flap_panel.ac</path>

 <offsets>
  <!-- x/y/z == back/right/up -->
  <x-m> 0.000 </x-m>
  <y-m> 0.000 </y-m>
  <z-m> 0.000 </z-m>
 </offsets>

 <!-- Rembrandt transparency markup. -->
 <effect>
  <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>FPL_glass</object-name>
  <object-name>FWL_glass</object-name>
  <object-name>indicator_glass</object-name>
 </effect>

 <animation> 
  <type>rotate</type>
  <object-name>indicator.1</object-name>
  <object-name>indicator.2</object-name>
  <property alias="../../params/flap-position-norm"/>
  <interpolation> 
   <entry><ind>0.0</ind><dep>0</dep></entry>
   <entry><ind>1.0</ind><dep>150</dep></entry>
  </interpolation>
  <condition>
   <property alias="../../../params/serviceable"/>
  </condition>
  <center>
   <x-m> 0.000 </x-m>
   <y-m>-0.041 </y-m>
   <z-m>-0.035 </z-m>
  </center>
  <axis> 
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>OS_handle</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <condition>
     <less-than>
      <property alias="../../../../../../params/operating-switch-cmd"/>
      <value>1.0</value>
     </less-than>
    </condition>
    <property alias="../../../../params/operating-switch-cmd"/>
    <step type="double">1.0</step>
   </binding>
  </action>
  <action>
   <button>1</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <condition>
     <greater-than>
      <property alias="../../../../../../params/operating-switch-cmd"/>
      <value>-1.0</value>
     </greater-than>
    </condition>
    <property alias="../../../../params/operating-switch-cmd"/>
    <step type="double">-1.0</step>
   </binding>
  </action>
  <action>
   <button>3</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <condition>
     <less-than>
      <property alias="../../../../../../params/operating-switch-cmd"/>
      <value>1.0</value>
     </less-than>
    </condition>
    <property alias="../../../../params/operating-switch-cmd"/>
    <step type="double">1.0</step>
   </binding>
  </action>
  <action>
   <button>4</button>
   <repeatable>false</repeatable>
   <binding>
    <command>property-adjust</command>
    <condition>
     <greater-than>
      <property alias="../../../../../../params/operating-switch-cmd"/>
      <value>-1.0</value>
     </greater-than>
    </condition>
    <property alias="../../../../params/operating-switch-cmd"/>
    <step type="double">-1.0</step>
   </binding>
  </action>
 </animation>

 <animation> 
  <type>rotate</type>
  <object-name>OS_handle</object-name>
  <property alias="../../params/operating-switch-cmd"/>
  <interpolation> 
   <entry><ind>-1.0</ind><dep>45</dep></entry>
   <entry><ind>1.0</ind><dep>-45</dep></entry>
  </interpolation>
  <!-- condition>
   <property alias="../../../params/serviceable"/>
  </condition -->
  <center>
   <x-m> 0.000 </x-m>
   <y-m> 0.041 </y-m>
   <z-m>-0.035 </z-m>
  </center>
  <axis> 
   <x>1</x>
   <y>0</y>
   <z>0</z>
  </axis>
 </animation>

 <animation> 
  <type>material</type>
  <object-name>FPL_glass</object-name>
  <condition>
   <property alias="../../../params/serviceable"/>
  </condition>
  <emission> 
   <red>0.0</red>
   <green>0.0</green>
   <blue>0.60</blue>
  </emission>
 </animation>

 <animation> 
  <type>material</type>
  <object-name>FWL_glass</object-name>
  <condition>
   <and>
    <property alias="../../../../params/serviceable"/>
    <greater-than>
     <property alias="../../../../../params/flap-position-norm"/>
     <value>0.334</value>
    </greater-than>
   </and>
  </condition>
  <emission> 
   <red>0.60</red>
   <green>0.0</green>
   <blue>0.00</blue>
  </emission>
 </animation>

 <animation> 
  <type>material</type>
  <object-name>indicator_face</object-name>
  <object-name>indicator.1</object-name>
  <object-name>OS_base</object-name>
  <emission> 
   <factor-prop alias="../../../params/lighting-norm"/>
   <red>0.75</red>
   <green>0.25</green>
   <blue>0.25</blue>
  </emission>
 </animation>

 <animation>
  <type>noshadow</type>
 </animation>

</PropertyList>
