 <!-- Doors and hatches animations =========================================-->
 <animation> 
  <type>pick</type>
  <object-name>astro_hatch</object-name>
  <action>
   <button>0</button>
   <repeatable>false</repeatable>
   <binding>
    <command>nasal</command>
