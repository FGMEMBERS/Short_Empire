<PropertyList>

 <parameters>
  <!-- All inputs must be provided. -->
  <rated-power type="double"/>
  <min-power   type="double"/>
  <current-power-property type="string"/>
 </parameters>


 <path type="string"/>

 <animation>
  <type>noshadow</type>
  <object-name>Light</object-name>
 </animation>

 <animation>
  <type>alpha-test</type>
  <alpha-factor>0.01</alpha-factor>
 </animation>

 <animation>
  <type>billboard</type>
  <object-name>Light</object-name>
  <spherical type="bool">true</spherical>
 </animation>

 <animation>
  <type>select</type>
  <object-name>Light</object-name>
  <condition>
   <greater-than-equals>
    <property alias="../../../../parameters/current-power-property"/>
    <value alias="../../../../parameters/min-power"/>
   </greater-than-equals>
  </condition>
 </animation>

 <animation>
  <type>dist-scale</type>
  <object-name>Light</object-name>
  <interpolation>
   <entry>
    <ind>0</ind>
    <dep>0.01</dep>
   </entry>
   <entry>
    <ind>300</ind>
    <dep>0.2</dep>
   </entry>
   <entry>
    <ind>1500</ind>
    <dep>0.8</dep>
   </entry>
   <entry>
    <ind>6000</ind>
    <dep>1.2</dep>
   </entry>
  </interpolation>
 </animation>

</PropertyList>
