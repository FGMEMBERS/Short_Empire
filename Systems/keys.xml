<PropertyList>

 <!-- Keyboard commands -->

 <!-- Walkview commands ======================================== -->
 <key n="87">
  <name>W</name>
  <desc>Run forward</desc>
  <binding>
   <command>nasal</command>
   <script>
     walkview.forward(4.0);
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.forward(0);
    </script>
   </binding>
  </mod-up>
 </key>

 <key n="119">
  <name>w</name>
  <desc>Walk forward</desc>
  <binding>
   <command>nasal</command>
   <script>
     walkview.forward(1.0);
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.forward(0);
    </script>
   </binding>
  </mod-up>
 </key>

 <key n="100">
  <name>d</name>
  <desc>Side step right</desc>
  <binding>
   <command>nasal</command>
   <script>
     walkview.side_step(0.5);
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.side_step(0);
    </script>
   </binding>
  </mod-up>
 </key>

 <key n="68">
  <name>D</name>
  <desc>Side step right fast</desc>
  <binding>
   <command>nasal</command>
   <script>
     walkview.side_step(1.0);
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.side_step(0);
    </script>
   </binding>
  </mod-up>
 </key>

 <key n="97">
  <name>a</name>
  <desc>Side step left</desc>
  <binding>
   <command>nasal</command>
   <script>
     walkview.side_step(-0.5);
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.side_step(0);
    </script>
   </binding>
  </mod-up>
 </key>
 <key n="65">
  <name>A</name>
  <desc>Side step left fast</desc>
  <binding>
   <command>nasal</command>
   <script>
     walkview.side_step(-1.0);
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.side_step(0);
    </script>
   </binding>
  </mod-up>
 </key>

 <key n="115">
  <name>s</name>
  <desc>Walk backwards.</desc>
  <binding>
   <command>nasal</command>
   <script>
     if (!walkview.forward(-1.0)) {
         controls.startEngine(1);
     }
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.forward(0);
      controls.startEngine(0);
    </script>
   </binding>
  </mod-up>
 </key>

 <!-- Remove this if you for some reason have 2d panels and want the default
      swap panels function on 'S'.
 -->
 <key n="83">
  <name>S</name>
  <desc>Walk backwards.</desc>
  <binding>
   <command>nasal</command>
   <script>
     walkview.forward(-1.0);
   </script>
  </binding>
  <mod-up>
   <binding>
    <command>nasal</command>
    <script>
      walkview.forward(0);
    </script>
   </binding>
  </mod-up>
 </key>

</PropertyList>
